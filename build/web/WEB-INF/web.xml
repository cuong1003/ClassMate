<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <!-- Welcome file configuration -->
    <servlet-mapping>
        <servlet-name>EditUserController</servlet-name>
        <url-pattern>/updatethongtin</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>Views/LandingPage/LandingPage.html</welcome-file>
    </welcome-file-list>
    <!-- Filter configuration -->
    <filter>
        <filter-name>NewFilter</filter-name>
        <filter-class>Filter.NewFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>NewFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- ========================= BASIC CONTROLLERS ========================= -->
    <!-- Login Controller -->
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUserController</servlet-name>
        <servlet-class>Controllers.EditUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!-- Register Controller -->
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>Controllers.RegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <!-- Logout Controller -->
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>Controllers.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/exit</url-pattern>
    </servlet-mapping>
    <!-- ========================= STUDENT CONTROLLERS ========================= -->
    <!-- Student Home -->
    <servlet>
        <servlet-name>StudentHome</servlet-name>
        <servlet-class>Controllers.Student.StudentHome</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentHome</servlet-name>
        <url-pattern>/s/studenthome</url-pattern>
    </servlet-mapping>
    <!-- Student Show Assignment -->
    <servlet>
        <servlet-name>StudentShowAssignment</servlet-name>
        <servlet-class>Controllers.Student.StudentShowAssignment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentShowAssignment</servlet-name>
        <url-pattern>/s/danhsachbaitap</url-pattern>
    </servlet-mapping>
    <!-- Student Submit Assignment -->
    <servlet>
        <servlet-name>StudentSubmitAssignment</servlet-name>
        <servlet-class>Controllers.Student.StudentSubmitAssignment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentSubmitAssignment</servlet-name>
        <url-pattern>/s/nopbaitap</url-pattern>
    </servlet-mapping>
    <!-- Student Show Members -->
    <servlet>
        <servlet-name>ShowMemberController</servlet-name>
        <servlet-class>Controllers.Student.ShowMemberController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowMemberController</servlet-name>
        <url-pattern>/s/danhsachlop</url-pattern>
    </servlet-mapping>
    <!-- Student Announcement Menu -->
    <servlet>
        <servlet-name>StudentHomeClassController</servlet-name>
        <servlet-class>Controllers.Student.StudentAnnouncementMenu</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentHomeClassController</servlet-name>
        <url-pattern>/s/bangtin</url-pattern>
    </servlet-mapping>
    <!-- ========================= TEACHER CONTROLLERS ========================= -->
    <!-- Teacher Home -->
    <servlet>
        <servlet-name>TeacherHome</servlet-name>
        <servlet-class>Controllers.Teacher.TeacherHome</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherHome</servlet-name>
        <url-pattern>/t/teacherhome</url-pattern>
    </servlet-mapping>
    <!-- Teacher Show Assignment -->
    <servlet>
        <servlet-name>TeacherShowAssignment</servlet-name>
        <servlet-class>Controllers.Teacher.TeacherShowAssignment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherShowAssignment</servlet-name>
        <url-pattern>/t/danhsachbaitap</url-pattern>
    </servlet-mapping>
    <!-- Teacher Student List -->
    <servlet>
        <servlet-name>TeacherStudentList</servlet-name>
        <servlet-class>Controllers.Teacher.TeacherStudentList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherStudentList</servlet-name>
        <url-pattern>/t/danhsachlop</url-pattern>
    </servlet-mapping>
    <!-- Teacher Announcement Menu -->
    <servlet>
        <servlet-name>TeacherClassController</servlet-name>
        <servlet-class>Controllers.Teacher.TeacherAnnouncementMenu</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherClassController</servlet-name>
        <url-pattern>/t/bangtin</url-pattern>
    </servlet-mapping>
</web-app>
